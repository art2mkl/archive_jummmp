{% extends 'base.html.twig' %}

{% block title %}Skills index
{% endblock %}

{% block body %}

	<h1>Hobbies
		<a class="btn" href="{{ path('cv_show', {'id': app.session.get('id')}) }}">
			<i class="fas fa-undo-alt"></i>
		</a>
	</h1>


	{% for skill in skills %}
		{% if app.user  and (app.user is same as(skill.userId) )%}

			<div class="box">
				<div class="boxLeft">
					<i class="{{ skill.icon }}"></i>
					<span>{{skill.skillName}}</span>
				</div>

				<div class="box">
					<a class="btn" href="{{ path('skills_edit', {'id': skill.id}) }}">
						<i class="fas fa-edit"></i>
					</a>
					<form method="post" action="{{ path('skills_delete', {'id': skill.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
						<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ skill.id) }}">
						<button class="btn">
							<i class="far fa-trash-alt"></i>
						</button>
					</form>
				</div>
			</div>


		{% endif %}
	{% else %}

		<p>no records found</p>

	{% endfor %}

	<h1>
		<i class="fas fa-plus-circle"></i>
		Ajoute une nouvelle exp√©rience</h1>

	{{ include('skills/_form.html.twig') }}

{% endblock %}
